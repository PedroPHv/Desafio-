<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <style>
    body {
      background: #666563;
    }

    h2 {
      color: black;
      text-align: center;
    }
  </style>

<body>
  <h2>Editar Registro</h2>
  <div class="container">
  <div class="container">
  <div class="container">
          

<% data.forEach(function(details) { %>
  <form action="/data/edit/<%= details._id %>" method="POST">
    <div class="form-group">
      <label for="name">Nome</label>
      <input class="form-control" type="text" placeholder="Nome (obrigatÃ³rio)"
        value="<%= details.name %>" name="name" required>
    </div>                                            
    <div class="form-group">
      <label for="surname">Sobrenome</label>
      <input class="form-control" type="text" placeholder="Sobrenome"
        value="<%= details.surname %>" name="surname" required>
    </div>                                           
    <div class="form-group">
      <label for="datadenascimento">Data de nascimento </label>
      <input class="form-control" type="date" placeholder="00/00/0000"
        value="<%= details.datadenascimento %>" name="datadenascimento"
        required>                                            
    </div>                                             
    <div class="form-group">
      <label for="cpf">Cpf</label>
      <input class="form-control" type="text" placeholder="000.000.000-00"
        value="<%= details.cpf %>" name="cpf" required minlength="0"
        maxlength="14">
    </div>                                           
    <div class="form-group">
      <label for="cidade">Cidade</label>
      <input class="form-control" type="text" placeholder="Cidade"
        value="<%= details.cidade %>" name="cidade" required>
    </div>                                           
    <div class="form-group">
      <label for="estado">Estado</label>
      <input class="form-control" type="text" placeholder="Estado"
        value="<%= details.estado %>" name="estado" required>
    </div>                                           
    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" type="text"
        placeholder="xxxxxxxx@xxxxxx.com" value="<%= details.email %>"
        name="email" required minlength="10" maxlength="30">
    </div>                                           
    <div class="form-group">
      <label for="telefone">Telefone</label>
      <input class="form-control" type="text" placeholder="(00) 00000-0000"
        value="<%= details.telefone %>" name="telefone" required minlength="0"
        maxlength="14">
    </div>                                           
    <br />
    <input class="btn btn-danger" type="submit" value="Salva">

  </form>
  <% }) %>
</div>
</body>

</html>                                                                                        